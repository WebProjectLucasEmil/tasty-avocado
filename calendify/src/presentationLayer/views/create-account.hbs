<div class="create-account">
  <h1>Create Account</h1>

  <!-- If errors occured when previously creating account-->
  {{#if errors.length}}
  <p>Error creating your account: </p>
  <ul>
    {{#each errors}}
    <li>{{this}}</li>
    {{/each}}
  </ul>
  {{/if}}
  
  <form method="post">

    <input type="text" name="n" placeholder="Name" required="required" />
    <input type="text" name="u" placeholder="Username" required="required" />
    <input type="password" name="p" placeholder="Password" required="required" />
    <button type="submit" class="btn btn-primary btn-block btn-large">Create my account!</button>
  </form>
</div>