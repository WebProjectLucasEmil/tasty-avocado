{{#unless isLoggedIn}}
<section class="cta va">
  <div class="container">
    <div class="columns">
      <div class="column is-6">
        <h1 id="login" class="title is-1 ">Log in</h1>
        <hr class="content-divider">
        <h2 class="subtitle">Don't have an account? Create one <a class="a" href="#">here!</a></h2>
      </div>

      <div class="column is-6">
        <form action="" method="POST">
          <div class="field">
            <label class="label">Email</label>
            <div class="control">
              <input class="input is-medium" type="text" name="username">
            </div>
          </div>
          <br>
          <div class="field">
            <label class="label">Password</label>
            <div class="control">
              <input class="input is-medium" type="password" name="password">
            </div>
          </div>
          <br>
          <div class="field is-grouped">
            <div class="control">
              <button class="button is-white is-rounded is-outlined">Submit</button>
            </div>
          </div>

          <input type="hidden" name="_csrf" value="{{token}}">

        </form>
      </div>
    </div>
  </div>
</section>
{{/unless}}
